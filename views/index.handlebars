<!--MODAL FOR NEW SCRAPE-->
<div class="container">
  <div class="modal fade" id="scrape-modal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <h2>Scraping Articles...</h2>
        </div>
      </div>
    </div>
  </div>
</div>

<!--MODAL FOR DELETE CONFIRMATION-->
<div class="container">
  <div class="modal fade" id="delete-modal" role="dialog">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <h2>Are you sure you want to delete scraped articles? (This action cannot be undone)</h2>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
          <a href="/delete" type="button" class="btn">Delete</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!--NAVBAR-->
<nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-dark">
  <a class="navbar-brand" href="/"><h1>Mongo Scraper</h1></a>
  <div>
    <a href="/"><button class="btn btn-primary" type="button" name="button">Home</button></a>
    <a href="/scrape"><button id="scrape-btn" class="btn btn-info" type="button" name="button" data-toggle="modal" data-target="#scrape-modal">Scrap New Articles</button></a>
    <button id="delete-btn" class="btn btn-danger" type="button" name="button" data-toggle="modal" data-target="#delete-modal">Delete Articles</button>
  </div>
</nav>

<!--JUMBOTRON-->
<div class="jumbotron text-center">
  <h1>Mongo Scraper</h1>
  <h5>New York Times NBA Edition</h5>
</div>

<!--MAIN CONTENT-->
<div id="articles" class="text-center">
  <div class="row container-fluid">
    {{#each data}}
      <div class="container article-div">
        <a href= {{this.link}} target="_blank"><img class="article-image" src={{this.image}} alt="article-image"></a>
        <div>
          <h3>{{this.title}}</h3>
          <h5>{{this.summary}}</h5>
        </div>
      </div>
    {{/each}}
  </div>
</div>
